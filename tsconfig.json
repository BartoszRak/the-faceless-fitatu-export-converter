{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "strict": true,
    "isolatedModules": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src"]
}
